{{template "base/header" .}}
<div class="admin user">
	<div class="ui container">
		<div class="ui grid">
			{{template "admin/navbar" .}}
			<div class="twelve wide column content">
				{{template "base/alert" .}}
				<h4 class="ui top attached header">
					{{.i18n.Tr "admin.domain.manage_panel"}} ({{.i18n.Tr "admin.total" .Total}})
					<div class="ui right">
						<a class="ui black tiny button" href="{{AppSubURL}}/admin/domain/new">{{.i18n.Tr "admin.domain.add_domain"}}</a>
					</div>
				</h4>
				<div class="ui attached segment">
					{{template "admin/base/search" .}}
				</div>
				<div class="ui unstackable attached table segment">
					<table class="ui unstackable very basic striped table">
						<thead>
							<tr>
								<th>ID</th>
								<th>{{.i18n.Tr "admin.domain.name"}}</th>
								<th>{{.i18n.Tr "admin.domain.mx"}}</th>
								<th>{{.i18n.Tr "admin.domain.a"}}</th>
								<th>{{.i18n.Tr "admin.domain.spf"}}</th>
								<th>{{.i18n.Tr "admin.domain.dkim"}}</th>
								<th>{{.i18n.Tr "admin.domain.dmarc"}}</th>
								<th>{{.i18n.Tr "admin.domain.is_default"}}</th>
								<th>{{.i18n.Tr "admin.domain.op"}}</th>
							</tr>
						</thead>
						<tbody>
							{{range .Domain}}
								<tr>
									<td>{{.Id}}</td>
									<td><a href="#">{{.Domain}}</a></td>
									<td><i class="fa fa{{if .Mx}}-check{{end}}-square-o"></i></td>
									<td><i class="fa fa{{if .A}}-check{{end}}-square-o"></i></td>
									<td><i class="fa fa{{if .Spf}}-check{{end}}-square-o"></i></td>
									<td><i class="fa fa{{if .Dkim}}-check{{end}}-square-o"></i></td>
									<td><i class="fa fa{{if .Dmarc}}-check{{end}}-square-o"></i></td>
									<td><i class="fa fa{{if .IsDefault}}-check{{end}}-square-o"></i></td>
									<td><a href="{{$.Link}}/admin/domain/{{.Id}}"><i class="fa fa-pencil-square-o"></i></a></td>
								</tr>
							{{end}}
						</tbody>
					</table>
				</div>

				{{template "admin/base/page" .}}
			</div>
		</div>
	</div>
</div>
{{template "base/footer" .}}
